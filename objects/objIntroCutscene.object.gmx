            <string>if (global.keyPausePressed[0] || phase &gt;= 5)
{
    global.nextRoom = rmTitleScreenNew;
}

timer++;
switch (phase)
{
    case 0: // IN DA YEAR 20XX SOMETHING
        if (timer &gt;= 8 &amp;&amp; timer mod 8 == 0 &amp;&amp; imgAlph &lt; 1)
        {
            imgAlph+= 0.2;
        }
        if (timer &gt;= 140)
        {
            imgAccel+= 0.1 * (imgAccel &lt; 6);
            imgY-= imgAccel;
        }
        if (imgY &lt;= -256)
        {
            phase = 1;
            imgAlph = 0.5;
            imgY = 256;
            img = 1;
        }
        break;
    case 1: // Scroll down
        imgY-= imgAccel;
        if (imgY &lt;= 180)
        {
            imgAccel-= 0.1 * (imgAccel &gt; 0);
        }
        if (imgAccel &lt;= 0)
        {
            imgY = 0;
            imgAccel = 0;
            timer = 32;
            phase = 2;
        }
        break;
    case 2: // Dr. Wily built Bass
    case 3: // Bass is a JERK
    case 4: // A new challenger?????
    
        /* specific timers for each image, so each image
        has the appropriate amount of time to be read in
        a managable amount of time */
        var maxTimer;
        if (phase == 2) maxTimer = 660;
        if (phase == 3) maxTimer = 720;
        if (phase == 4) maxTimer = 600;

        if (timer &lt; maxTimer)
        {
            if (timer &gt;= 36)
            {
                if (imgAlph &lt; 0.5)
                {
                    imgAlph+= 0.1;
                    timer = 32;
                }
            }
            if (timer &gt;= 76)
            {
                if (textAlph &lt; 1)
                {
                    textAlph+= 0.2;
                    timer = 72;
                } 
            }
        }
        if (timer &gt;= maxTimer &amp;&amp; timer mod 4 == 0)
        {
            if (textAlph &gt; 0)
            {
                imgAlph-= 0.1;
                textAlph-= 0.2;
            }
            else
            {
                phase++;
                timer = 0;
                img++;
            }
        }
        break;
}
